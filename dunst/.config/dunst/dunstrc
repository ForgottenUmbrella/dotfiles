# -*- mode: conf; -*-
[global]
    width = 300
    notification_limit = 0
    origin = top-right
    offset = 30x30
    indicate_hidden = true
    # X11 only; for Wayland, set alpha value of colours.
    # 0 is no transparency, 100 is full transparency.
    transparency = 20
    separator_height = 2
    # Vertical padding between text and separator.
    padding = 20
    horizontal_padding = 20
    frame_width = 0
    separator_color = auto
    font = Monospace 8
    line_height = 0
    # The format of the message.  Possible variables are:
    #   %a  appname
    #   %s  summary
    #   %b  body
    #   %i  iconname (including its path)
    #   %I  iconname (without its path)
    #   %p  progress value if set ([  0%] to [100%])
    #   %n  progress value if set without any extra characters
    #   %%  Literal %
    # Basic HTML markup is allowed.
    format = "<b>%s %p</b>\n%b"
    hide_duplicate_count = true
    icon_position = left
    icon_theme = "oomox-xresources2, Adwaita"
    enable_recursive_icon_lookup = true
    dmenu = dmenu
    corner_radius = 5
    mouse_left_click = do_action
    mouse_middle_click = close_current
    mouse_right_click = context

    # Global rules
    alignment = left
    markup = full

[urgency_low]
    timeout = 2

[urgency_normal]
    timeout = 5

[urgency_critical]
    timeout = 0

[mpd]
    summary = "MPD Notification"
    format = "%b"

[brightness]
    appname = brightness
    history_ignore = true

[vol]
    appname = vol
    history_ignore = true

