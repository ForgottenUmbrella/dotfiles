#!/bin/sh
# Update my system. btw i use arch

trap exit INT

sudo pacman -Sy archlinux-keyring && sudo pacman -Su
paru -Syu --noconfirm "$@"
paru -Sc --noconfirm
sudo -E pacdiff
fwupdmgr refresh && fwupdmgr update
echo 'Updating Emacs packages...'
emacsclient --eval '(auto-package-update-now)'
antibody update
